public class Somadeuminternavalode0a9897 {
        public static void main(String[] args) {
    
            System.out.println("Soma dos números de um intervalo de 0 até 9897:");        
            int soma=0;
    for (int x = 0; x <= 9897; x++ ){
         soma = soma + x;
        }
    System.out.println(soma);
        
        
    }
    }